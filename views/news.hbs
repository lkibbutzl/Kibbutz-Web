          <li>
            <a href="# ">Contact</a>
          </li>
          <li>
            <a href="#">Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <div id="ytWidget"></div>
    <script
      src="https://translate.yandex.net/website-widget/v1/widget.js?widgetId=ytWidget&pageLang=en&widgetTheme=light&autoMode=false"
      type="text/javascript"></script>
    <ul class="collection">
      {{#each result}}
      <li class="collection-item avatar">
        <div class="row">

          <div class="col s12 m6 l3">
            <img src={{this.urlToImage}} style="width:auto;height:100px;"></img>
          </div>

          <div class="col s12 m6 l9">
            <h2 style="margin-top:0%">{{this.title}}</h2>
            <p>{{this.description}}</p>
            <a href={{this.url}} class="secondary-content">more...</a>
          </div>

        </div>
      </li>
      {{/each}}
    </ul>

  </main>
  <footer class="foot">
    <div class="foot-logo-box">
      <img src="img/spinner.gif" alt="Logo" class="foot-logo">
    </div>
    <div class="row">
      <div class="col-1-of-2">
        <div class="foot-navigation">
          <ul class="foot-list">
            <li class="foot-item">
              <a href="/" class="foot-link">Home</a>
